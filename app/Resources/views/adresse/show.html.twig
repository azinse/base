{% extends 'base.html.twig' %}

{% block body %}
    <h1>Adresse</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adresse.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ adresse.adresse }}</td>
            </tr>
            
            <tr>
                <th>Ville</th>
                <td>{{ adresse.localite }}</td>
            </tr>
            <tr>
                <th>Code_postal</th>
                <td>{{ adresse.codepostal }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ adresse.pays }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adresse_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('adresse_edit', { 'id': adresse.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
