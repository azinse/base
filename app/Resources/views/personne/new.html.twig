{% extends 'base.html.twig' %}

{% block body %}
    <div class="row-fluid"> 
        <div class="span12"> 
            <div id="content-body">
                <h4 id="content-title" style="display: none;">{% set title = 'Personne'|trans ~ ' : ' ~ 'cr√©action'|trans %}{{title|upper}}</h4>
                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_errors(form) }}
                    <div class="control-group">
                        {{ form_label(form.sexe,'civilite', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.sexe) }}
                        {{ form_errors(form.sexe) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.nom,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.prenom,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.prenom) }}
                        {{ form_errors(form.prenom) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.email,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.telephone,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.telephone) }}
                        {{ form_errors(form.telephone) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.mobile,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.mobile) }}
                        {{ form_errors(form.mobile) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.date_naissance,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.date_naissance) }}
                        {{ form_errors(form.date_naissance) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.fonction,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.fonction) }}
                        {{ form_errors(form.fonction) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.presentation,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.presentation) }}
                        {{ form_errors(form.presentation) }}
                        </div>
                    </div>
                    {% if app.user.hasGroupe("interne") or app.user.hasGroupe("administrateur")%}
                    <div class="control-group">
                        {{ form_label(form.auteur,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(form.auteur,{'attr':{'class':'chzn-select-deselect'} }) }}
                        {{ form_errors(form.auteur) }}
                        </div>
                    </div>
                    {% endif%}
                    <div class="hidden">{{ form_rest(form) }}</div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success btn-save"><i class="icon-ok"></i>{{'Sauvegarder'|trans}}</button>
                        <a class="btn btn-exit" {% if app.request.uri != app.session.get('previousUrl')%} href="{{app.session.get('previousUrl')}}" {% else %} href="{{app.session.get('expreviousUrl')}}" {% endif %}><i class="icon-arrow-left"></i>{%trans%}Quitter{%endtrans%}</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}