{% extends 'base.html.twig' %}

{% block body %}
    <div class="row-fluid"> 
        <div class="span12"> 
            <div id="content-body">
                <h3 id="content-title" style="display: none;">{% set title = 'Personne'|trans ~ ' : ' ~ 'liste'|trans %}{{title|upper}}</h3>
                <a id="" title="{{'add_action'|trans}}" class="btn btn-primary new-action"  href="{{path('personne_new')}}" ><i class="icon-plus"></i></a>
                <table  class="liste display dataTable table table-condensed table-bordered table-striped" cellspacing="0">
                    <thead>
                        <tr>
                            <th>{{'Civilite'|trans}}</th>
                            <th>{{'Nom'|trans}}</th>
                            <th>{{'Prenom'|trans}}</th>
                            <th>{{'Email'|trans}}</th>
                            <th>{{'Telephone'|trans}}</th>
                            <th>{{'fonction'|trans}}</th>
                            <th>{{'Responsable'|trans}}</th>
                            <th>{{'Actif'|trans}}</th>
                            <th>{{'Actions'|trans}}</th>
                        </tr>
                        <tr id="filterrow" class="hidden-phone hidden-tablet">
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th class="no-filtre"></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{'Civilite'|trans}}</th>
                            <th>{{'Nom'|trans}}</th>
                            <th>{{'Prenom'|trans}}</th>
                            <th>{{'Email'|trans}}</th>
                            <th>{{'Telephone'|trans}}</th>
                            <th>{{'fonction'|trans}}</th>
                            <th>{{'Responsable'|trans}}</th>
                            <th>{{'Actif'|trans}}</th>
                            <th>{{'Actions'|trans}}</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for personne in personnes %}
                        <tr class="item-line">
                            <td>{{ personne.sexe }}</td>
                            <td>{{ personne.nom }}</td>
                            <td>{{ personne.prenom }}</td>
                            <td>{{ personne.email }}</td>
                            <td>{{ personne.telephone }} {{ personne.mobile }}</td>
                            <td>{{ personne.fonction }}</td>
                            <td>{{ personne.auteur}}</td>
                            <td>{% if personne.actif %}{{'Oui'|trans}}{% else %}{{'Non'|trans}}{% endif %}</td>
                            <td>
                                <a  class="btn btn-mini btn-primary" title="{{'show_action'|trans}}" href="{{ path('personne_show', { 'id': personne.id }) }}"><i class="icon-eye-open"></i></a>
                                <a  class="btn btn-mini btn-success edit-action" title="{{'edit_action'|trans}}" href="{{ path('personne_edit', { 'id': personne.id }) }}"><i class="icon-edit"></i></a>
                                <a id="{{personne.id}}" title="{{'del_action'|trans}}" class="btn btn-mini btn-danger delete-link" href="{{ path('personne_delete', { 'id': personne.id }) }}"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

