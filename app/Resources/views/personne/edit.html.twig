{% extends 'base.html.twig' %}

{% block body %}
    <div class="row-fluid"> 
        <div class="span12"> 
            <div id="content-body">
                <h4 id="content-title" style="display: none;">{% set title = 'Personne'|trans ~ ' : ' ~ 'modification'|trans %}{{title|upper}}</h4>
                {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_errors(edit_form) }}
                    <div class="control-group">
                        {{ form_label(edit_form.nom,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.nom) }}
                        {{ form_errors(edit_form.nom) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.prenom,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.prenom) }}
                        {{ form_errors(edit_form.prenom) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.email,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.email) }}
                        {{ form_errors(edit_form.email) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.telephone,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.telephone) }}
                        {{ form_errors(edit_form.telephone) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.mobile,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.mobile) }}
                        {{ form_errors(edit_form.mobile) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.date_naissance,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.date_naissance) }}
                        {{ form_errors(edit_form.date_naissance) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.fonction,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.fonction) }}
                        {{ form_errors(edit_form.fonction) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.presentation,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.presentation,{'attr':{'class':'span12 wysihtmleditor5'} }) }}
                        {{ form_errors(edit_form.presentation) }}
                        </div>
                    </div>
                    {% if app.user.hasGroupe("interne")%}
                    <div class="control-group">
                        {{ form_label(edit_form.auteur,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.auteur,{'attr':{'class':'chzn-select-deselect'} }) }}
                        {{ form_errors(edit_form.auteur) }}
                        </div>
                    </div>
                    {% endif%}
                    <div class="hidden">{{ form_rest(edit_form) }}</div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success btn-save"><i class="icon-ok"></i>{{'Sauvegarder'|trans}}</button>
                        <a class="btn btn-exit" {% if app.request.uri != app.session.get('previousUrl')%} href="{{app.session.get('previousUrl')}}" {% else %} href="{{app.session.get('expreviousUrl')}}" {% endif %}><i class="icon-arrow-left"></i>{%trans%}Quitter{%endtrans%}</a>
                        
                    </div>

                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}