<div class="row-fluid">
    <div class="span12">
        <p>[{{commentaire.auteur}}]{% if commentaire.datecreation %} : {{ commentaire.datecreation|localizeddate('medium', 'none', app.request.locale)}}{% endif %}
            {% if (app.user.id == commentaire.auteur.id or app.user.hasGroupe('administrateur'))%} 
            <a href="{{path('commentaire_edit', { 'id': commentaire.id } )}}" class="btn btn-mini btn-success edit-action" title="{{'Modifier'|trans}}"><i class="icon-edit"></i></a>
            <a href="{{path('commentaire_delete', { 'id': commentaire.id } )}}" class="btn btn-mini btn-danger delete-link" title="{{'Supprimer'|trans}}"><i class="icon-trash"></i></a>
            {% endif %}
        </p>
        <p> {{commentaire.commentaire|raw}}</p>
    </div>
</div>
