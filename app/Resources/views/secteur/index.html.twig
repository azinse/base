{% extends 'base.html.twig' %}

{% block body %}
    <div class="row-fluid"> 
        <div class="span12"> 
            <div id="content-body">
                <h3 id="content-title" style="display: none;">{% set title = 'Secteur'|trans ~ ' : ' ~ 'liste'|trans %}{{title|upper}}</h3>
                <a id="" title="{{'add_action'|trans}}" class="btn btn-primary new-action"  href="{{path('secteur_new')}}"><i class="icon-plus"></i></a>
                <table  class="liste display dataTable table table-condensed table-bordered table-striped" cellspacing="0">
                    <thead>
                        <tr>
                            <th>{{'Nom'|trans}}</th>
                            <th>{{'Parent'|trans}}</th>
                            <th>{{'Class'|trans}}</th>
                            <th>{{'Actions'|trans}}</th>
                        </tr>
                        <tr id="filterrow" class="hidden-phone">
                            <th></th>
                            <th></th>
                            <th></th>
                            <th class="no-filtre"></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{'Nom'|trans}}</th>
                            <th>{{'Parent'|trans}}</th>
                            <th>{{'Class'|trans}}</th>
                            <th>{{'Actions'|trans}}</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for secteur in secteurs %}
                        <tr class="item-line">
                            <td>{{ secteur.nom }}</td>
                            <td>{{ secteur.parent }}</td>
                            <td><a href="#"><i class="{{ secteur.class }}"></i>{{ secteur.class }}</a></td>
                            <td>
{#                                <a  class="btn btn-mini btn-primary" title="{{'show_action'|trans}}" href="{{ path('secteur_show', { 'id': secteur.id }) }}"><i class="icon-eye-open"></i></a>
#}                              <a  class="btn btn-mini btn-success edit-action" title="{{'edit_action'|trans}}" href="{{ path('secteur_edit', { 'id': secteur.id }) }}"><i class="icon-edit"></i></a>
                                <a id="{{secteur.id}}" title="{{'del_action'|trans}}" class="btn btn-mini btn-danger delete-link" href="{{ path('secteur_delete', { 'id': secteur.id }) }}"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
{% endblock %}

