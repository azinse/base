{% extends 'base.html.twig' %}

{% block body %}
    <div class="row-fluid"> 
        <div class="span12"> 
            <div id="content-body">
                <h4 id="content-title" style="display: none;">{% set title = 'Société'|trans ~ ' : ' ~ 'modification'|trans %}{{title|upper}}</h4>
                {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_errors(edit_form) }}
                    {%if app.user.hasGroupe('administrateur')%}
                    <div class="control-group">
                        {{ form_label(edit_form.type,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.type) }}
                        {{ form_errors(edit_form.type) }}
                        </div>
                    </div>
                    {% endif %}
                    <div class="control-group">
                        {{ form_label(edit_form.nom,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.nom) }}
                        {{ form_errors(edit_form.nom) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.secteur,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.secteur,{'attr':{'class':'chzn-select'} }) }}
                        {{ form_errors(edit_form.secteur) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.numero_identification,'numero_identification'|trans, { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.numero_identification) }}
                        {{ form_errors(edit_form.numero_identification) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.email,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.email) }}
                        {{ form_errors(edit_form.email) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.telephone,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.telephone) }}
                        {{ form_errors(edit_form.telephone) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(edit_form.fax,'', { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                        {{ form_widget(edit_form.fax) }}
                        {{ form_errors(edit_form.fax) }}
                        </div>
                    </div>
                    <div class="hidden">{{ form_rest(edit_form) }}</div>
                    <div class="form-actions">
                        <button id="btn-save" type="submit" class="btn btn-success"><i class="icon-ok"></i>{{'Sauvegarder'|trans}}</button>
                        
                        <a class="btn btn-exit" {% if app.request.uri != app.session.get('previousUrl')%} href="{{app.session.get('previousUrl')}}" {% else %} href="{{app.session.get('expreviousUrl')}}" {% endif %}><i class="icon-arrow-left"></i>{%trans%}Quitter{%endtrans%}</a>
                    </div>

                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}
